<% if @concert.errors.any? %>
	<ul>
		<% @concert.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
		<%end%>
	</ul>
<%end%>
<h2>Add a New Concert</h2>
<%= form_for @concert, :html => {:class => "form-horizontal"} do |f| %>
	<div class= "form-group">
		<%= f.label :artist, class: "control-label col-md-2" %>
		<div class="col-sm-8">
			<%= f.text_field :artist, class: "form-control" %>
		</div>
	</div>
	<div class= "form-group">
		<%= f.label :venue, class: "control-label col-md-2" %>
		<div class="col-sm-8">
			<%= f.text_field :venue, class: "form-control" %>
		</div>
	</div>
	<div class= "form-group">
		<%= f.label :city, class: "control-label col-md-2" %>
		<div class="col-sm-8">
			<%= f.text_field :city, class: "form-control" %>
		</div>
	</div>
	<div class= "form-group">
		<%= f.label :date, class: "control-label col-md-2" %>
		<div class="col-sm-8">
			<%= f.datetime_field :date, class: "form-control" %>
		</div>
	</div>
	<div class= "form-group">
		<%= f.label :price, class: "control-label col-md-2" %>
		<div class="col-sm-8">
			<%= f.number_field :price, class: "form-control" %>
		</div>
	</div>
	<div class= "form-group">
		<%= f.label :description, class: "control-label col-md-2" %>
		<div class="col-sm-8">
			<%= f.text_area :description, class: "form-control" %>
		</div>
	</div>
	<%= f.button %>
<%end%>	

<%= link_to "Back", concerts_path %>