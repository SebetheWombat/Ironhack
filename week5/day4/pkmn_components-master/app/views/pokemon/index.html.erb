<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-name">Feraligtr</span>
          <small class="js-id">#160</small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <div class="js-img">
          <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/34.png">
        </div>
        <div>
          <h4>Description</h4>
          <p class="js-description"></p>
        </div>
        <dl class="dl-horizontal">
          <dt>Type</dt>
          <dd class="js-type"></dd>
          <dt>Height</dt>
          <dd class="js-height">23</dd>

          <dt>Weight</dt>
          <dd class="js-weight">888</dd>
        </dl>
        <h4>STATS:</h4>

        <ul class="js-stats"></ul>
        <button class="js-evolve">Show Evolutions</button>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->

<!-- Evolutions modal view (hidden at first) -->
<div class="modal fade js-evolution-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-evolutions">Evolutions</span>
          <small class="js-id">#160</small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">

      <div class="js-eChart"></div>

      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->